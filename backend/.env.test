# Server Configuration
PORT=3001
NODE_ENV=test

# Test Database Configuration (using a different database for tests)
DATABASE_URL="postgresql://postgres:postgres@localhost:5433/everything_app_test?schema=public"

# JWT Configuration
JWT_SECRET=test-jwt-secret-key
JWT_EXPIRY=24h

# Feature Flags
ENABLE_SOCIAL_FEATURES=true
ENABLE_NEWS_FEATURES=true
ENABLE_CALENDAR_FEATURES=true
ENABLE_NOTIFICATIONS=true

# Rate Limiting
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=error
